{
    "version": "2.0.0",
    "command": "npm",
    "echoCommand": false,
    "tasks": [
        {
            "label": "npm: dev",
            "type": "npm",
            "isBackground": true,
            "script": "dev",
            "problemMatcher": [{
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^([^\\s].*)\\((\\d+|\\,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Version: webpack.+"
                }
            }],
            "detail": "webpack-dev-server --mode=development --config=./webpack.config.dev.js"
        }
    ]
}